<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
        android:background="@color/monk_app_bg"
        android:padding="4dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_60"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_1106"
                android:layout_marginStart="20dp"
                android:layout_gravity="center|start"/>

        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/txt_audio_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUDIO_15236.mp3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:layout_gravity="start"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_audio_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 MB"
                        android:textSize="11sp"
                        android:textColor="@color/monk_grey_dark"
                        android:layout_gravity="start"/>
                <TextView
                        android:id="@+id/txt_audio_download_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13-02-2021"
                        android:textColor="@color/monk_grey_dark"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:textSize="11sp"
                        android:layout_marginStart="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>