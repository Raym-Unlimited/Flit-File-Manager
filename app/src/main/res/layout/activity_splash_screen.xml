<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/monk_app_bg"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        tools:context=".views.activities.SplashScreenActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/monk_file_manager_logo"
            android:id="@+id/imageView_splash"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/textView_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monk"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/monk_grey_dark"
            android:textStyle="normal"
            android:textSize="47sp"
            android:layout_gravity="center"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line_1"
            android:backgroundTint="@color/monk_orange_light"
            android:layout_gravity="center"
            android:id="@+id/imageView2_splash"/>

    <TextView
            android:id="@+id/textView2_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security and File Manager"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/monk_orange_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"/>

    <ProgressBar
            android:id="@+id/pb_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            />
</LinearLayout>