<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/monk_app_bg"
        tools:context=".activities.filesharing.ReceiveConnectionActivity">

    <TextView
            android:id="@+id/title_waiting_for_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:text="@string/waiting_for_other_device_to_connect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            android:background="@drawable/htgqr_removebg_preview_2scan_qr"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerVertical="true"
            app:layout_constraintTop_toBottomOf="@id/title_waiting_for_sender"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/tv_click_send_to_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:text="@string/ask_the_other_person_to_tap_send_and_connect_to_your_device"
            app:layout_constraintTop_toBottomOf="@id/qrcode"
            app:layout_constraintStart_toStartOf="@id/qrcode"
            app:layout_constraintEnd_toEndOf="@+id/qrcode"/>


</androidx.constraintlayout.widget.ConstraintLayout>