<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/monk_app_bg"
             tools:context=".fragments.SentFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/available_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_records_found"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/monk_grey_dark"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/undraw_file_searching_re_3evy_1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"/>
    </LinearLayout>
</FrameLayout>