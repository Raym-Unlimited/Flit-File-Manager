<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_container"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:padding="8dp">

    <ImageView
            android:id="@+id/img_app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/img_app_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_app_size"/>

    <TextView
            android:id="@+id/txt_app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.77 GB"
            android:textColor="@color/monk_grey_dark"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>