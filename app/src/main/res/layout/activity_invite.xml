<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/monk_app_bg"
        tools:context=".views.activities.filesharing.InviteActivity">

    <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_arrow_7"/>

    <TextView
            android:id="@+id/tv_invite_frs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:text="@string/invite_friends"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/btn_wa_invite"
            android:layout_width="321dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_invite_frs"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            android:background="@drawable/ic_group_1097"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@drawable/whatsapp_1"
            app:layout_constraintBottom_toBottomOf="@+id/btn_wa_invite"
            app:layout_constraintTop_toTopOf="@+id/btn_wa_invite"
            app:layout_constraintStart_toStartOf="@+id/btn_wa_invite"/>

    <View
            android:id="@+id/btn_qr_invite"
            android:layout_width="321dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_wa_invite"
            app:layout_constraintStart_toStartOf="@id/btn_wa_invite"
            android:background="@drawable/ic_group_1098"
            android:layout_marginTop="12dp"
            />

    <View
            android:id="@+id/btn_more_invite"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_qr_invite"
            app:layout_constraintStart_toStartOf="@id/btn_qr_invite"
            android:background="@drawable/ic_group_1099"
            />
</androidx.constraintlayout.widget.ConstraintLayout>